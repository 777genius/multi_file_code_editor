# Flutter IDE - Environment Configuration
# Copy this file to .env and customize

# LSP Bridge Server Configuration
LSP_BRIDGE_URL=ws://localhost:9999
LSP_BRIDGE_TIMEOUT=30000

# Editor Configuration
EDITOR_THEME=dark
EDITOR_FONT_SIZE=14
EDITOR_TAB_SIZE=2
EDITOR_LINE_HEIGHT=1.5

# LSP Server Paths (optional, auto-detected if not set)
# DART_LSP_PATH=/path/to/dart
# TYPESCRIPT_LSP_PATH=/path/to/typescript-language-server
# PYTHON_LSP_PATH=/path/to/pylsp
# RUST_LSP_PATH=/path/to/rust-analyzer

# Development Mode
DEV_MODE=true
RUST_LOG=info

# Feature Flags
ENABLE_LSP=true
ENABLE_SYNTAX_HIGHLIGHTING=true
ENABLE_DIAGNOSTICS=true
ENABLE_CODE_COMPLETION=true

# Performance
MAX_FILE_SIZE_MB=10
DEBOUNCE_MS=300
